[user]
  name = scogliani
  email = simon.cogliani@gmail.com
[alias]
  a = add
  ap = add -p
  br = branch
  bra = branch -a -vvv
  brd = branch -d
  c = commit --verbose
  ca = commit -a --verbose
  cam = commit -a -m
  cm = commit -m
  co = checkout
  cob = checkout -b
  d = diff
  dc = diff --cached
  ds = diff --stat
  f = fetch -p
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s \
%Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all
  la = "!git config -l | grep alias | cut -c 7-"
  lg = log --color --graph --pretty=format:'%Cred%h%Creset \
-%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' \
--abbrev-commit
  ls = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" \
--decorate
  m = commit --amend --verbose
  st = status -sb
  subi = submodule init
  subu = submodule update
[color]
  ui = auto
[credential]
  helper = store
