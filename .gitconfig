[include]
  path = ~/.git-alias
[user]
  name = scogliani
  email = simon.cogliani@gmail.com
[color]
  ui = auto
[core]
  editor = vim
  hooksPath = ~/.githooks
[credential]
  helper = cache --timeout 86400
[push]
  default = simple
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[rerere]
	enabled = true
